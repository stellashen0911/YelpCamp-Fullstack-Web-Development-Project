<% layout('layouts/Boilerplate') %>
<h1>Register User</h1>
<form action="/register" method="POST" novalidate class="validated_form">
    <div class="mb-3">
        <label class="form-lable" for="username"> Username: </label>
        <input class="form-control" type="text" id="username" name="username" required>
        <div class="valid-feedback">
        Looks good!
        </div>
        <div id="validationServerUsernameFeedback" class="invalid-feedback">
            Please put valid input.
        </div>
    </div>

    <div class="mb-3">
        <label class="form-lable" for="email"> Email: </label>
        <input class="form-control" type="email" id="email" name="email" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div id="validationServerUsernameFeedback" class="invalid-feedback">
            Please put valid input.
        </div>
    </div>

    <div class="mb-3">
        <label class="form-lable" for="password"> Password: </label>
        <input class="form-control" type="password" id="password" name="password" required>
        <div class="valid-feedback">
        Looks good!
        <div class="valid-feedback">
            Looks good!
        </div>
        <div id="validationServerUsernameFeedback" class="invalid-feedback">
            Please put valid input.
        </div>
    </div>

    <div class="mb-3">
        <button class="btn btn-success">Register</button>
    </div>
</form>